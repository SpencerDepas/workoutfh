<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="5dp">

    <RelativeLayout
        android:id="@+id/color_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/muted_red"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <Button
            android:layout_width="@dimen/circle_height"
            android:id="@+id/clickable_color_item"
            android:layout_height="@dimen/circle_height"
            android:background="@drawable/color_item_selection_border"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

</FrameLayout>