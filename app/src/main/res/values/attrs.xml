<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorImageView">
        <attr name="customColor" format="color"/>
    </declare-styleable>

    <attr name="fontface">
        <enum name="montserrat_hairline"   value="0"/>
        <enum name="montserrat_ultralight" value="1"/>
        <enum name="montserrat_light"      value="2"/>
        <enum name="montserrat_regular"    value="3"/>
        <enum name="montserrat_semibold"   value="4"/>
        <enum name="montserrat_bold"       value="5"/>
        <enum name="montserrat_extrabold"  value="6"/>
        <enum name="montserrat_black"      value="7"/>
        <enum name="avenir_next_ultralight" value="8"/>
        <enum name="avenir_next_regular" value="9"/>
        <enum name="avenir_next_medium" value="10"/>
        <enum name="avenir_next_demibold" value="11"/>
        <enum name="avenir_next_bold" value="12"/>
        <enum name="avenir_next_heavy" value="13"/>
    </attr>

    <declare-styleable name="FontTextView">
        <attr name="fontface"/>
    </declare-styleable>

    <declare-styleable name="FontEditText">
        <attr name="fontface"/>
    </declare-styleable>

    <declare-styleable name="FontAutoCompleteTextView">
        <attr name="fontface"/>
    </declare-styleable>

</resources>